! urxvt
!URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt*.shading: 110
!URxvt.inheritPixmap: true
URxvt*buffered: true
URxvt*cursorBlink: true
URxvt*underlineColor: yellow
URxvt*depth: 32
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*loginShell: true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines: 5000
URxvt*termName: rxvt-unicode
!! Extensions
URxvt.perl-ext-common: default,matcher,clipboard,keyboard-select,url-select,font-size
URxvt.keysym.Mod4-Escape: perl:keyboard-select:activate
URxvt.keysym.Mod4-s: perl:keyboard-select:search
!URxvt.keysym.Mod4-u: perl:url-select:search_next
URxvt.keysym.Mod4-c: perl:clipboard:copy
URxvt.keysym.Mod4-v: perl:clipboard:paste
URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

!! Make URLs clickable
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.keysym.C-Delete:  perl:matcher:last
URxvt.keysym.M-Delete:  perl:matcher:list

!! Change font size dynamically with urxvt-font-size-git
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

!! rofi settings
rofi.modi:                           window,run,ssh
rofi.font:                           haack 20
rofi.bw:                             0
rofi.padding:                        3
rofi.color-window:                   #002b36,#002b36
rofi.color-normal:                   #002b36,#657b83,#002b36,#93a1a1,#eee8d5
! rofi.color-active:                   #fdf6e3,#268bd2,#eee8d5,#268bd2,#fdf6e3
! rofi.color-window:                   #fdf6e3,#002b36
! rofi.location:                       0
